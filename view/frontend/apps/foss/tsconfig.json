{
  "extends": ["expo/tsconfig.base", "@hydris/typescript-config/strict.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "docs",
    "cli",
    "android",
    "build"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "constants/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "*.config.ts",
    "nativewind-env.d.ts"
  ]
}
